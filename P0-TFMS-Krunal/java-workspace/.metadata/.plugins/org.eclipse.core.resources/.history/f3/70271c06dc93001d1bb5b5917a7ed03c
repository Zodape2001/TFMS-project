package com.revature.model;
import java.util.ArrayList;
import java.util.Scanner;

import com.revature.constant.*;
//import java.util.Scanner;

public class Menu {
	public void menuList() {
		Constant constant = new Constant();		
		Scanner sc = new Scanner(System.in);
		System.out.println(constant.APPLICATIONSHMENU);
		System.out.println(constant.APPLICATIONADDDETAILS);
		System.out.println(constant.APPLICATIONTRAINERDETAILS);
		System.out.println(constant.APPLICATIONDELETETRAINERDETAILS);
		System.out.println(constant.APPLICATIONUPDATETRAINERDETAILS);
//		System.out.println("Press 5: Sort Trainer details");
		int press = sc.nextInt();
//		ChildTrainerDetails ctd = new ChildTrainerDetails();
		ArrayList<Trainer> trainerList = new ArrayList<Trainer>();
		int condition;

		switch(press)
		{
			case 1:
				System.out.println(constant.SWITCHADDDETAILS);
				do {
					System.out.print(constant.ENTERTRAINERID);
					String id = sc.next();
					System.out.print(constant.ENTERTRAINERNAME);
					String name = sc.next();
					System.out.print(constant.ENTERTRAINERTRACK);
					String track = sc.next();
					System.out.print(constant.ENTERTRAINERQUALIFICATION);
					String qualification = sc.next();
					System.out.print(constant.ENTERTRAINEREXPERIENCE);
					int experience = sc.nextInt();
					System.out.print(constant.ENTERTRAINERPHONUMBER);
					String phone = sc.next();
					System.out.print(constant.ENTERTRAINEREMAIL);
					String email = sc.next();
					
					Trainer trainerDetails = new Trainer(id, name, track, qualification, experience, phone, email);
					trainerList.add(trainerDetails);
					System.out.println(constant.CHECKCONDITION);
					condition = sc.nextInt();
					
				}while(condition==1);
				break;
			case 2:
				System.out.println(constant.SWITCHTRAINERDETAILS);
//				ctd.showTrainerDetails();
				break;
			case 3:
				System.out.println(constant.SWITCHDELETETRAINERDETAILS);
//				ctd.deleteTrainerDetails();
				break;
			case 4:
				System.out.println(constant.SWITCHUPDATETRAINERDETAILS);
//				ctd.editTrainerDetails();
				break;
//			case 5:
//				ArrayListSort();
//				break;
			default:
				System.out.println(constant.DEFAULTVALUE);
		}

	}
}
